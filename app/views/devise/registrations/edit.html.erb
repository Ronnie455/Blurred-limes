<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <br />
      <div class="form-group">
        
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder:"Username" %>
      </div>
      <br />
      <div class="form-group">
      
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
      </div>
      <br />
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
       
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"New Password (minimum 6 char)"  %>
     
      </div>
      <br />
      <div class="form-group">
       
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"Confirm New Password" %>
      </div>
      <br />
      <div class="form-group">
        
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder:"Old Password" %>
      </div>
      <br />
      <div class="form-group">
        <%= f.submit "Update Profile", class: 'btn-secondary' %>
      </div>
    <% end %>
    <br />
    <div class="form-group">
      <br /><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
    </div>
    <br />
    <div class="links">
        <%= link_to "Back to Home", root_path %>
      </div>
  </div>
</div>
