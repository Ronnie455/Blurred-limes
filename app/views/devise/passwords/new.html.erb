<h1>Forgot your password?</h1>

<div class="row">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <br />
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Email" %>
      </div>
      <br />
      <div class="form-group">
        <%= f.submit "Send me reset password instructions", class: 'btn-secondary' %>
      </div>
    <% end %>
    <br />
    <div class="links"><%= render "devise/shared/links" %></div>
  </div>
</div>
